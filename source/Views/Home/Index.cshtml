@model HomeViewModel
@{
    ViewData["Title"] = "Slide Pane";
    ViewData["BodyClasses"] = "index";
}

<div class="text-center">
    <div id="qrcode"></div>
    <div id="status">
        <span class="status">Connecting...</span>
    </div>
    <div id="buttons">
        <a class="control" href="@Model.Url" title="@Model.Url" target="_blank">Remote Control</a>
        | 
        <a class="refresh" href="#">Refresh</a>
        | 
        <a class="theme" href="#">Toogle Theme</span>
    </div>
</div>

<input type="hidden" id="token" value="@Model.Id" />

@section Scripts
{
    <script type="text/javascript" src="~/js/index.js" asp-append-version="true"></script>
}